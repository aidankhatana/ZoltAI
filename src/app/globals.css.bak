@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --foreground-rgb: 0, 0, 0;
  --background-start-rgb: 255, 243, 224;
  --background-end-rgb: 255, 255, 255;
  --primary: 239, 108, 0; /* sunset-600 */
  --primary-light: 251, 146, 60; /* sunset-400 */
  --primary-dark: 214, 88, 0; /* sunset-700 */
}

.theme-sunset {
  --foreground-rgb: 0, 0, 0;
  --background-start-rgb: 255, 243, 224;
  --background-end-rgb: 255, 255, 255;
  --primary: 239, 108, 0; /* sunset-600 */
  --primary-light: 251, 146, 60; /* sunset-400 */
  --primary-dark: 214, 88, 0; /* sunset-700 */
}

.theme-sunrise {
  --foreground-rgb: 0, 0, 0;
  --background-start-rgb: 225, 245, 254;
  --background-end-rgb: 255, 255, 255;
}

@media (prefers-color-scheme: dark) {
  :root {
    --foreground-rgb: 255, 255, 255;
    --background-start-rgb: 66, 45, 24;
    --background-end-rgb: 33, 22, 12;
    --primary: 251, 146, 60; /* sunset-400 */
    --primary-light: 254, 215, 170; /* sunset-200 */
    --primary-dark: 239, 108, 0; /* sunset-600 */
  }
  
  .theme-sunset.dark {
    --foreground-rgb: 255, 255, 255;
    --background-start-rgb: 66, 45, 24;
    --background-end-rgb: 33, 22, 12;
    --primary: 251, 146, 60; /* sunset-400 */
    --primary-light: 254, 215, 170; /* sunset-200 */
    --primary-dark: 239, 108, 0; /* sunset-600 */
  }
  
  .theme-sunrise.dark {
    --foreground-rgb: 255, 255, 255;
    --background-start-rgb: 1, 87, 155;
    --background-end-rgb: 0, 29, 51;
  }
}

body {
  color: rgb(var(--foreground-rgb));
  background: linear-gradient(
      to bottom,
      transparent,
      rgb(var(--background-end-rgb))
    )
    rgb(var(--background-start-rgb));
}

/* Sunset Theme Colors */
.text-sunset-50 { color: #FFF8E1; }
.text-sunset-100 { color: #FFECB3; }
.text-sunset-200 { color: #FFE082; }
.text-sunset-300 { color: #FFD54F; }
.text-sunset-400 { color: #FFCA28; }
.text-sunset-500 { color: #FFC107; }
.text-sunset-600 { color: #FFB300; }
.text-sunset-700 { color: #FFA000; }
.text-sunset-800 { color: #FF8F00; }
.text-sunset-900 { color: #FF6F00; }

.bg-sunset-50 { background-color: #FFF8E1; }
.bg-sunset-100 { background-color: #FFECB3; }
.bg-sunset-200 { background-color: #FFE082; }
.bg-sunset-300 { background-color: #FFD54F; }
.bg-sunset-400 { background-color: #FFCA28; }
.bg-sunset-500 { background-color: #FFC107; }
.bg-sunset-600 { background-color: #FFB300; }
.bg-sunset-700 { background-color: #FFA000; }
.bg-sunset-800 { background-color: #FF8F00; }
.bg-sunset-900 { background-color: #FF6F00; }

.border-sunset-50 { border-color: #FFF8E1; }
.border-sunset-100 { border-color: #FFECB3; }
.border-sunset-200 { border-color: #FFE082; }
.border-sunset-300 { border-color: #FFD54F; }
.border-sunset-400 { border-color: #FFCA28; }
.border-sunset-500 { border-color: #FFC107; }
.border-sunset-600 { border-color: #FFB300; }
.border-sunset-700 { border-color: #FFA000; }
.border-sunset-800 { border-color: #FF8F00; }
.border-sunset-900 { border-color: #FF6F00; }

/* Sunset Gradient */
.bg-gradient-sunset {
  background: linear-gradient(to bottom, #FF6F00, #FFA000);
}

@layer components {
  .btn-primary {
    @apply bg-sunset-600 hover:bg-sunset-700 dark:bg-sunset-500 dark:hover:bg-sunset-600 text-white py-2 px-4 rounded-lg font-medium transition-colors;
  }
  
  .btn-secondary {
    @apply bg-white hover:bg-gray-100 dark:bg-gray-700 dark:hover:bg-gray-600 text-sunset-600 dark:text-sunset-400 border border-sunset-200 dark:border-sunset-800 py-2 px-4 rounded-lg font-medium transition-colors;
  }
  
  .card {
    @apply bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 border border-sunset-100 dark:border-sunset-900;
  }
  
  .input {
    @apply mt-1 block w-full px-3 py-2 bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 rounded-md shadow-sm text-gray-900 dark:text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition duration-200 ease-in-out;
  }
  
  .roadmap-card {
    @apply bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden border border-sunset-100 dark:border-sunset-900 hover:shadow-lg transition duration-200;
  }
  
  .theme-toggle {
    @apply p-2 rounded-full bg-sunset-100 dark:bg-sunset-800 text-sunset-800 dark:text-sunset-100 hover:bg-sunset-200 dark:hover:bg-sunset-700 transition duration-200;
  }
  
  .bg-gradient-sunset {
    @apply bg-gradient-to-br from-sunset-600 to-sunset-800;
  }
  
  .text-primary {
    color: rgb(var(--primary));
  }
  
  .text-primary-light {
    color: rgb(var(--primary-light));
  }
  
  .text-primary-dark {
    color: rgb(var(--primary-dark));
  }
  
  .border-primary {
    border-color: rgb(var(--primary));
  }
  
  .dark .text-primary-300 {
    color: rgb(var(--primary-light));
  }
  
  .dark .border-primary-300 {
    border-color: rgb(var(--primary-light));
  }
}
